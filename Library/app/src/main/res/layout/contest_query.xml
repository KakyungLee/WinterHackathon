<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/contest_query_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/contest_query_booktitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반지의 제왕"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="접수번호 : "/>
        <TextView
            android:id="@+id/contest_query_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="001053853"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학번 : "/>
        <TextView
            android:id="@+id/contest_query_stunumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름 : "/>
        <TextView
            android:id="@+id/contest_query_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홍길동"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학과 : "/>
        <TextView
            android:id="@+id/contest_query_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="컴퓨터공학과"/>
    </GridLayout>

    <Button
        android:id="@+id/contest_query_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="신청취소"/>

</LinearLayout>