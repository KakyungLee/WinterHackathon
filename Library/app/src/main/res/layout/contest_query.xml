<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/contest_query_book"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/contest_query_booktitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="4"
            android:columnCount="2"
            android:orientation="horizontal"
            android:paddingLeft="50dp"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="접수번호 : "
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/contest_query_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학번 : "
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/contest_query_stunumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름 : "
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/contest_query_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학과 : "
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/contest_query_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"/>
        </GridLayout>

    </LinearLayout>



    <Button
        android:id="@+id/contest_query_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="신청취소"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:layout_margin="10dp"
        android:textColor="@color/color4"
        android:textSize="15dp"/>

</RelativeLayout>