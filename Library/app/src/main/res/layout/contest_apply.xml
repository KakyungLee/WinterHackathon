<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/contest_apply_abook"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/abook"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_marginBottom="10dp"/>

            <ImageButton
                android:id="@+id/contest_apply_bbook"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/bbook"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/contest_apply_slected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorAccent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="개인정보 동의 여부"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"/>

            <CheckBox
                android:id="@+id/contest_apply_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주의사항"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* 장학금은 본교 장학규정에 따라 변동될 수 있음\n* 학부재학생이 아닌 휴학, 자퇴등 장학규정에 위배되는 학생은 제외\n* 타장학금과 중복수혜 가능\n* 이번학기 장학금이 등록금범위를 초과하여도 독서장학금 전액 지급\n* 졸업학기 가능하며, 학기초과자는 제외 학생은 제외"
            android:background="@color/color1"
            android:padding="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"/>

    </LinearLayout>



    <Button
        android:id="@+id/contest_apply_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="신청"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="10dp"
        android:textColor="@color/color4"
        android:textSize="20dp"/>

</RelativeLayout>